@model GroupCourseViewModel
@{
    ViewData["Title"] = "GroupCourse";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Group Course Teachers</h1>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
@if (Model.GroupCourses.Count != 0)
{
    <h2 class="text-center">GCT list</h2>
    <table class="table table-hover" id="js-table">
        <thead>
            <tr>
                <th scope="col">Teacher Name</th>
                <th scope="col">Group Name</th>
                <th scope="col">Course Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var groupCourse in Model.GroupCourses)
            {
                <tr>
                    <td>@groupCourse.TeacherName</td>
                    <td>@groupCourse.GroupName</td>
                    <td>@groupCourse.CourseName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-center">There are no results</h2>
}


<a class="btn btn-outline-secondary" asp-action="AddGroupCourse">Add group course</a>
<script type="text/javascript">
    $(document).ready(function () {
        $("#js-table").DataTable();
    });
</script>